<%= render "shared/header" %>

<div class="stocks_main">
  <div class="stocks_top">
    <div class="stocks_title">Stocks</div>
    <ul class='stocks_lists'>
      <li class="request_list_request_time">時間</li>
      <li class="request_list_affiliation">支店 / 依頼者</li>
      <li class="request_list_article">品名</li>
      <li class="request_list_quantity">数量</li>
      <li class="request_list_status">状況</li>
      <li class="request_list_response_user">対応者</li>
    </ul>
  </div>

  <div class="requests_bottom">
    <% @stocks.each do |stock| %>
      <%= link_to stock_path(stock.id) do %> 
        <ul class='request_input_lists'>
          <li class="request_list_article"><%= stock.article.name %></li>
          <li class="request_list_quantity"><%= stock.quantity %></li>
        </ul>
      <% end %>
    <% end %>
  </div>

</div>

<%= render "shared/footer" %>