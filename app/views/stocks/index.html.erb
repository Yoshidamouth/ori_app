<%= render "shared/header" %>

<div class="stocks_main">
  <div class="stocks_top">
    <div class="stocks_title">Stocks</div>
    <ul class='stocks_lists'>
      <li class="request_list_article">品名</li>
      <li class="stocks_list_quantity_s">在庫数量</li>
      <li class="request_list_minimum_stock_level_s">必要最低数</li>
    </ul>
  </div>

  <div class="requests_bottom">
    <% @stocks.each do |stock| %>
      <%= link_to edit_stock_path(stock.id), class: 'stocks_link' do %>
        <ul class='stocks_input_lists'>
          <li class="request_list_article"><%= stock.article.name %></li>
          <li class="stocks_list_quantity <%= 'low-stock' if stock.quantity <= stock.minimum_stock_level %>"><%= stock.quantity %></li>
          <li class="request_list_minimum_stock_level"><%= stock.minimum_stock_level %></li>
        </ul>
      <% end %>
    <% end %>
  </div>
</div>

<%= render "shared/footer" %>