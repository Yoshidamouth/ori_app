<%= render "shared/header" %>

  <div class="users_main">
    <div class="users_contents">
      <div class="users_contents_top">
        <div class="users_title">ログイン</div>
      </div>

      <div class="users_contents_botoom">
        <%= form_for @user, url: user_session_path do |f| %>
          <div class="field">
            <%= f.label :メール, class: "field-text" %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "field-input" %>
          </div>

          <div class="field">
            <%= f.label :パスワード, class: "field-text" %><br />
            <%= f.password_field :password, autocomplete: "current-password", class: "field-password-input" %>
          </div>

          <%# if devise_mapping.rememberable? %>
            <%# <div class="actions">
              <%= f.check_box :remember_me %>
              <%#= f.label :次回から自動的にログイン %>
            <%# </div> %>
          <%# end %>

          <%# if devise_mapping.recoverable? && controller_name != 'passwords' %>
            <%# <div class="actions">
              <%= link_to "パスワードをお忘れですか?", new_password_path(resource_name) %>
            <%# </div> %>
          <%# end %>

        <div class="login_contents">
          <div class="actions">
            <%= f.submit "ログイン", class: "field-login-text" %>
          </div>
          <% end %>

          <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
            <div class="actions">
              <%= link_to "アカウントを作成する", new_registration_path(resource_name) %>
            </div>
          <% end %>
        </div>
      </div>

    </div>
  </div>

<%= render "shared/footer" %>