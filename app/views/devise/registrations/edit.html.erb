<%= render "shared/header" %>

<div class="users_registration_main">
  <div class="users_contents">
    <div class="users_contents_top">
      <div class="users_title">ユーザー情報を編集する</div>
    </div>

    <div class="users_contents_botoom">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :email, "メール", class: "field-text" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "field-input" %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

        <div class="field">
          <%= f.label :lastname, "姓", class: "field-text" %><br />
          <%= f.text_field :lastname, class:"input-default field-input", id:"lastname", autofocus: true %>
        </div>

        <div class="field">
          <%= f.label :firstname, "名", class: "field-text" %><br />
          <%= f.text_field :firstname, class:"input-default field-input", id:"firstname" %>
        </div>

        <div class="field">
          <%= f.label :affiliation_id, "所属", class: "field-text" %><br />
          <%= f.collection_select :affiliation_id, Affiliation.all, :id, :name, {}, {class: "field-input", id: "affiliation_id"} %>
        </div>

        <div class="field">
          <%= f.label :current_password, "現在のパスワード", class: "field-text" %><br />
          <div class="field-text">(変更を確認するために現在のパスワードが必要です)</div>
          <%= f.password_field :current_password, autocomplete: "current-password", class: "field-input" %>
        </div>

        <div class="login_contents">
          <div class="actions">
            <%= f.submit "変更する", class: "field-login-text" %>
          </div>
        </div>

      <% end %>
    </div>
  </div>
</div>

<%= render "shared/footer" %>