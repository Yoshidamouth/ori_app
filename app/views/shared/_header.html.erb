<%# CSS・・・assets/stylesheets/shared/header.css %>
<header class="header">
  <div class="heading">
    <% if user_signed_in? %>
      <h1 class="logo"><%= link_to 'ORI APP', authenticated_root_path %></h1>
    <% else %>
      <h1 class="logo"><%= link_to 'ORI APP', unauthenticated_root_path %></h1>
    <% end %>
  </div>
  <div class="nav">
    <ul class='lists-right'>
      <% if user_signed_in? %>
        <li><%= link_to "#", "#", class: "user-nickname" %></li>
        <li><%= link_to 'ログアウト', destroy_user_session_path, data: {turbo_method: :delete}, class: "logout" %></li>
      <% else %>
        <li><%= link_to 'ログイン', new_user_session_path, class: "login" %></li>
        <li><%= link_to '新規登録', new_user_registration_path, class: "sign-up" %></li>
      <% end %>
    </ul>
  </div>
</header>